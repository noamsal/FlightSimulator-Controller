<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="viewModel.MyViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:paddingTop="40sp"
        tools:context=".views.MainActivity">


        <EditText
            android:id="@+id/IP_number"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_green_dark"
            android:digits="01234567890."
            android:ems="10"
            android:hint="@string/IP_number"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/Port_number"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_green_dark"
            android:ems="10"
            android:hint="@string/Port_number"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/Connect_Button"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/teal_700"
            android:onClick="@{() -> viewmodel.onConnect()}"
            android:text="@string/Submit_Button"
            app:backgroundTint="@android:color/holo_blue_dark" />

        <!-- layout for holding two frames - one for the verticall seek-bar, and one for joystick       -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="603dp"
            android:orientation="horizontal">

            <!-- layout for vertical seekbar + joystick  -->

            <FrameLayout
                android:id="@+id/VolumeLayout"
                android:layout_width="573dp"
                android:layout_height="576dp"
                android:orientation="horizontal"
                android:rotation="270">

                <SeekBar
                    android:id="@+id/throttle"
                    android:layout_width="571dp"
                    android:layout_height="54dp"
                    android:layout_gravity="start"
                    android:progress="50"
                    android:progressDrawable="@drawable/custom_progress"
                    android:secondaryProgress="40"

                    />


            </FrameLayout>


        <!-- layout for joystick  -->
            <FrameLayout
                android:layout_width="244dp"
                android:layout_height="508dp">

            </FrameLayout>


        </LinearLayout>









        <!-- HORIZONTAL seek-bar: rudder  -->
        <SeekBar
            android:id="@+id/rudder"
            android:layout_width="731dp"
            android:layout_height="54dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="10dp"

            android:max="1"
            android:progress="40"
            android:progressDrawable="@drawable/custom_progress" />




    </LinearLayout>

</layout>
